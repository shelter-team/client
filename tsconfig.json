{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"allowJs": true,
		"typeRoots": [
      "./node_modules/@types"
    ],
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["es2015", "es2017.object", "dom", "dom.iterable", "scripthost"],
		"downlevelIteration": true
	},
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
} 